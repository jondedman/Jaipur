<div class="flex justify-center mt-2 sm:mt-4">
  <div class="flex justify-center bg-blue-500 bg-opacity-40 text-white p-6 w-1/2 sm:w-1/8 text-sm sm:text-lg md:text-2xl">


<div class="font-poppins">
      <h2 class="text-center my-2">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), format: :html, data: {turbo: false }) do |f| %>
    <div class="field my-2">
      <div>
      <%= f.label :email %>
      </div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-black" %>
    </div>

    <div class="field my-2">
      <div>
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "text-black" %>
      </div>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field my-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions my-2">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>


</div>
