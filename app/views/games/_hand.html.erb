  <div class="w-full sm:p-4 border-2 border-gray-500">
    <%# <div class="flex-wrap h-3/4 justify-between items-center w-full mb-2"> %>
      <div class="justify-around items-center">

<div class="flex">
        <% @current_players_cards.each do |card| %>
          <div class="relative border-2 border-gray-500 w-16 h-24 sm:w-32 sm:h-48 rounded-md shadow-md bg-white p-1 sm:p-2 transform transition duration-500 ease-in-out hover:scale-105 shadow-obvious">
            <div class="w-full h-full relative">
              <div class="absolute inset-0 bg-cover bg-center rounded-md" style="background-image: url(<%= asset_path "#{card.card_type}.jpg" %>);">
              </div>
              <div class="hidden sm:block relative text-center text-xl font-bold bg-white bg-opacity-40 font-serif">
                <%= card.card_type %>
              </div>
            </div>
            <%= check_box_tag 'player_card_ids[]', card.id, false, class: "border-1 border-gray-700 p-1 rounded-md multi-card-select absolute top-1 left-1", style: "display: none;", data: {multi_select_target: "playerCheckbox"}  %>
          </div>
        <% end %>
</div>

        <div class="flex sm:items-center flex-wrap border-2 border-gray-500 w-full h-22 sm:h-24 rounded-md shadow-lg py-2">
          <% @current_players_herd.each do |camel| %>
            <div class="border-2 border-gray-500 w-6 h-6 sm:w-12 sm:h-12 rounded-md shadow-lg bg-white p-1 m-1 transform transition duration-500 ease-in-out hover:scale-105 shadow-md animate-bounce">
              <div class="absolute inset-0 bg-cover bg-center rounded-md" style="background-image: url(<%= asset_path "camel_selfie.jpg" %>);">
              </div>
            </div>
            <%= check_box_tag 'player_camel_ids[]', camel.id, false, class: "border-1 border-gray-300 rounded-md multi-card-select", style: "display: none;" , data: {multi_select_target: "playerCheckbox"}  %>
          <% end %>
        </div>
      <%# </div> %>
    </div>

  </div>
