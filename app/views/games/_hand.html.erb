  <div class="w-full p-4">
    <div class="flex-wrap justify-between items-center w-full mb-2">
      <div class="flex justify-around items-center">

        <% @current_players_cards.each do |card| %>
          <div class="relative border-2 border-gray-500 w-32 h-48 rounded-md shadow-md bg-white p-2 transform transition duration-500 ease-in-out hover:scale-105 shadow-obvious">
            <div class="w-full h-full relative">
              <div class="absolute inset-0 bg-cover bg-center rounded-md" style="background-image: url(<%= asset_path "#{card.card_type}.jpg" %>);">
              </div>
              <div class="relative text-center text-xl font-bold bg-white bg-opacity-40 font-serif">
                <%= card.card_type %>
              </div>
            </div>
            <%= check_box_tag 'player_card_ids[]', card.id, false, class: "border-1 border-gray-700 p-1 rounded-md multi-card-select absolute top-1 left-1", style: "display: none;", data: {multi_select_target: "playerCheckbox"}  %>
          </div>
        <% end %>
        <div class="flex flex-wrap border-2 border-gray-500 w-40 h-48 rounded-md shadow-lg  p-2">
          <% @current_players_herd.each do |camel| %>
            <div class="border-2 border-gray-500 w-8 h-8 rounded-md shadow-lg bg-white p-1 m-1 transform transition duration-500 ease-in-out hover:scale-105 shadow-md animate-bounce">
              <div class="absolute inset-0 bg-cover bg-center rounded-md" style="background-image: url(<%= asset_path "camel_selfie.jpg" %>);">
              </div>
            </div>
            <%= check_box_tag 'player_camel_ids[]', camel.id, false, class: "border-1 border-gray-300 rounded-md multi-card-select", style: "display: none;" , data: {multi_select_target: "playerCheckbox"}  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
