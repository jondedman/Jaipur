<div>
  <%= link_to root_path, data: { turbo_action: 'replace' }, style: "align-self: flex-start;" do %>
    <div class="relative w-12 h-16 sm:w-32 sm:h-48 transform transition duration-500 ease-in-out hover:scale-105 shadow-md self-start">
      <%= image_tag("king_jon.jpeg", class: "rounded-lg block mt-4 ml-4 border-2 bg-white w-3/4 h-3/4 sm:w-full sm:h-full ") %>
      <p class="hidden sm:block absolute bottom-1 left-1/2 transform -translate-x-1/2 text-white bg-black bg-opacity-80 p-0.5 rounded-lg text-sm w-3/4 text-center">Home</p>
    </div>
  <% end %>

  <div class="flex self-center mx-auto w-screen sm:w-3/4">
    <div class="w-full rounded-md sm:p-5 relative" style="background-image: url(<%= asset_path 'table.jpg' %>); background-position: center; background-repeat: no-repeat; background-size: cover;">
      <div class="absolute inset-0 bg-green-600 opacity-10" style="pointer-events: none;"></div>
      <%= render partial: 'game', formats: [:html] %>
    </div>
  </div>
</div>
